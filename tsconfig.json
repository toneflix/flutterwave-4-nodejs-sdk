{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "esnext",
    "module": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "flutterwave-node-v4/contracts": ["./src/Contracts/index.ts"]
    }
  },
  "include": ["./**/*.d.ts", "./**/*", "./src/*"],
  "exclude": ["./dist", "/.node_modules"]
}
